{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": 0,
    "arrow-body-style": [2, "as-needed"],

    "comma-dangle": 0,

    "import/imports-first": 0,
    "import/newline-after-import": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-named-as-default": 0,
    "import/no-unresolved": 2,
    "import/prefer-default-export": 0,

    "indent": [2, 4, {"SwitchCase": 1}],

    "max-len": 0,

    "newline-per-chained-call": 0,

    "no-console": 1,

    "no-use-before-define": 0,
    "no-return-assign": 0,
    "no-param-reassign": 0,

    "prefer-template": 2,

    "class-methods-use-this": 0,

    "semi": [2, "never"],

    "key-spacing": [2, {
      "align": "colon",
      "beforeColon": true,
      "afterColon": true
    }],

    "require-yield": 0
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./webpack.config.js"
      }
    }
  }
}
