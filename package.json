{
  "name": "trekk",
  "version": "0.1.0",
  "description": "Trekk is a helper library to create timeline and triggered animations based on scroll positions of elements / document.",
  "main": "build/trekk.js",
  "module": "index.js",
  "scripts": {
    "build": "webpack",
    "develop": "webpack --watch",
    "compile": "BABEL_ENV=cjs babel -d lib/ source/",
    "test": "nyc ava tests --fail-fast",
    "test:nyan": "nyc ava tests --fail-fast --tap | tap-nyan",
    "coverage": "nyc report",
    "cover": "npm run test && npm run coverage"
  },
  "author": "Antonio Rizzo",
  "license": "ISC",
  "dependencies": {
    "baconjs": "^0.7.89",
    "raf": "^3.3.0",
    "reselect": "^2.5.4"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "coveralls": "^2.11.15",
    "eslint": "^3.13.1",
    "eslint-config-airbnb-base": "^11.0.1",
    "eslint-plugin-import": "^2.2.0",
    "nyc": "^10.0.0",
    "tap-nyan": "^1.1.0",
    "webpack": "^2.2.0-rc.3"
  },
  "babel": {
    "babelrc": false,
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "exclude": "tests/*"
  }
}
