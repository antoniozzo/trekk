{
  "name": "trekk",
  "version": "1.0.2",
  "description": "Trekk is a helper library to create timeline and triggered animations based on scroll positions of elements / document.",
  "main": "build/trekk.js",
  "module": "index.js",
  "scripts": {
    "build": "webpack && webpack --env=prod",
    "develop": "nyc ava --fail-fast --watch",
    "compile": "BABEL_ENV=cjs babel -d lib/ source/",
    "lint": "./node_modules/.bin/eslint ./",
    "test": "npm run lint && nyc ava --fail-fast",
    "test:nyan": "nyc ava --fail-fast --tap | tap-nyan && nyc report",
    "coverage": "nyc report",
    "cover": "npm run test && npm run coverage"
  },
  "repository": "https://github.com/antoniozzo/trekk.git",
  "author": "Antonio Rizzo <info@antoniorizzo.com>",
  "license": "ISC",
  "dependencies": {
    "args-js": "^0.10.12",
    "invariant": "^2.2.2",
    "numeral": "^2.0.4",
    "raf": "^3.3.0"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "coveralls": "^2.11.15",
    "eslint": "^3.13.1",
    "eslint-config-airbnb-base": "^11.0.1",
    "eslint-plugin-import": "^2.2.0",
    "nyc": "^10.0.0",
    "tap-nyan": "^1.1.0",
    "webpack": "^2.2.0-rc.3"
  },
  "babel": {
    "babelrc": false,
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "add-module-exports"
    ]
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "nyc": {
    "exclude": [
      "test/*",
      "source/easings.js"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "arrow-parens": 0,
      "arrow-body-style": [
        2,
        "as-needed"
      ],
      "comma-dangle": 0,
      "import/imports-first": 0,
      "import/newline-after-import": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-named-as-default": 0,
      "import/no-unresolved": 2,
      "import/prefer-default-export": 0,
      "indent": [
        "error",
        "tab"
      ],
      "max-len": 0,
      "newline-per-chained-call": 0,
      "no-console": 1,
      "no-tabs": 0,
      "no-plusplus": 0,
      "no-nested-ternary": 0,
      "no-use-before-define": 0,
      "no-return-assign": 0,
      "no-param-reassign": 0,
      "prefer-template": 2,
      "class-methods-use-this": 0,
      "semi": [
        2,
        "never"
      ],
      "key-spacing": [
        2,
        {
          "align": "colon",
          "beforeColon": true,
          "afterColon": true
        }
      ],
      "require-yield": 0
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./webpack.config.js"
        }
      }
    }
  }
}
